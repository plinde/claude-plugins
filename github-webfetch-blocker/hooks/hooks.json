{
  "description": "Blocks WebFetch on GitHub URLs and guides gh api usage toward proper CLI subcommands",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/block-github-webfetch.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/suggest-gh-subcommands.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
